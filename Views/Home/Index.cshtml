@model List<Quizzle.Models.QuizzesViewModel>
@{
    ViewData["Title"] = "Home Page";
    var Categorias = ViewData["Categorias"] as List<CategoriasViewModel>;
    string active = "";
}

<div class="album py-5">
    <div class="container">
        <div class="row">
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                    <li data-target="#carousel" data-slide-to="3"></li>
                    <li data-target="#carousel" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    @foreach (var item in Categorias)
                    {
                        if (Categorias.First() == item)
                            active = "carousel-item active";
                        else
                            active = "carousel-item";

                        <div class="@active">
                            <img src="@item.Imagem" class="d-block w-100 imgCarousel" alt="@item.Descricao">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.Descricao</h5>
                            </div>
                        </div>
                    }
                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Próximo</span>
                </a>
            </div>
            <img style="all:unset; background-image: url('/images/categorias/animais.jpg'); background-size: cover; background-position: center; width:100%; height:100% m">
        </div>

        <hr class="mb-4">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="@item.Imagem" class="card-img-top imgCardQuiz" alt="...">
                        <div class="card-body">
                            <p class="card-text">@item.Descricao</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" href="~/Jogar/@item.Id_Quiz" class="btn btn-sm btn-outline-secondary">@item.Titulo</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<style>
    .imgCarousel {
        object-fit: cover;
        height: 400px;
    }

    .imgCardQuiz {
        height: 225px;
        object-fit: cover;
    }
</style>